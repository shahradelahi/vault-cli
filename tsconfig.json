{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@sindresorhus/tsconfig",
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "build"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
